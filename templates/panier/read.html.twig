{% extends 'base.html.twig' %}

{% block body %}
    <div class="shopping-cart section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Shopping Summery -->

                    <table class="table shopping-summery" id="table">
                        <thead>
                        <tr class="main-hading">
                            <th>Article</th>
                            <th>Nom</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center">Quantite</th>
                            <th class="text-center">TOTAL</th>
                            <th class="text-center"><i> </i></th>
                        </tr>
                        </thead>


                        <tbody>


                        {% for a in panier %}
                            {% set n = 1 %}
                            {% for m in a.articles %}
                        <tr>

                            <td class="image" data-title="No"><img src="{{ asset('upload/'~m.img) }}" alt="#"></td>

                            <td class="product-des" data-title="Description">
                                <p class="product-name"><a href="#">{{ m.nom}}</a></p>
                                <p class="product-des">{{ m.description }}</p>
                            </td>
                            <td class="price" data-title="Price"><span id="prix{{n}}" neme="">{{ m.prix }} DT </span></td>
                            <td class="qty" data-title="Qty"><!-- Input Order -->
                                <div class="input-group">
                                    <div class="button minus">
                                        <button type="button" class="btn btn-primary btn-number"  disabled="disabled" data-type="minus" data-field="quant[{{ n }}]">
                                            <i class="ti-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" id="quantity{{ n }}" name="quant[{{ n }}]"onchange="keyup({{ n }})" class="input-number"  data-min="1" data-max="100" value="1">
                                    <div class="button plus">
                                        <button type="button" class="btn btn-primary btn-number" data-type="plus" data-field="quant[{{ n }}]">
                                            <i class="ti-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <!--/ End Input Order -->
                            </td>
                            <td class="total-amount" data-title="Total" name="result"><span id="result{{ n }}" > {{ m.prix }}</span></td>
                            <td class="action" data-title="Remove"><a href="{{ path('deletearticle',{'id':m.id}) }}"><i class="ti-trash remove-icon"></i></a></td>
                        </tr>
                            {% set n = n+1 %}
                            {% endfor %}

                        {% endfor %}

                        </tbody>


                    </table>

                    <!--/ End Shopping Summery -->
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <!-- Total Amount -->
                    <div class="total-amount">
                        <div class="row">
                            <div class="col-lg-8 col-md-5 col-12">
                                <div class="left">
                                    <div class="coupon">
                                        <form action="#" target="_blank">
                                            <input name="Coupon" placeholder="Enter Your Coupon">
                                            <button class="btn">Apply</button>
                                        </form>
                                    </div>
                                    <div class="checkbox">
                                        <label class="checkbox-inline" for="2"><input name="news" id="2" type="checkbox"> Shipping (+10$)</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-7 col-12">
                                <div class="right">

                                    <ul>
                                        <li class="last">Total a payer <span id="total">

                                            </span></li>
                                    </ul>

                                    <div class="button5">
                                        <a href="#" class="btn">Commander</a>
                                        <a href="{{ path('article') }}" class="btn">Continuer le shopping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/ End Total Amount -->
                </div>
            </div>
        </div>
    </div>
<script>
    $( document ).ready(function() {
        var TotalValue = 0;

        $('td[name ="result"]').each(function(index,value){
            currentRow = parseFloat($(this).text());
            TotalValue += currentRow
        });

        document.getElementById('total').innerHTML = TotalValue;
    });

    function keyup(id)
    {
        $(document).ready(function() {
            var price = $("#prix" + id).text();
            var discount = $('#quantity' + id).val();

            total_price = parseFloat(price) * parseFloat(discount);

            $('#result' + id).text(total_price.toFixed(2) +"DT");
            var TotalValue = 0;

            $('td[name ="result"]').each(function(index,value){
                currentRow = parseFloat($(this).text(),2);
                TotalValue += currentRow
            });

            document.getElementById('total').innerHTML = TotalValue+"DT";
        });
    }


</script>
    <!-- Jquery -->
    <script src="js/jquery.min.js"></script>
    <script src="js/jquery-migrate-3.0.0.js"></script>
    <script src="js/jquery-ui.min.js"></script>
    <!-- Popper JS -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Color JS -->
    <script src="js/colors.js"></script>
    <!-- Slicknav JS -->
    <script src="js/slicknav.min.js"></script>
    <!-- Owl Carousel JS -->
    <script src="js/owl-carousel.js"></script>
    <!-- Magnific Popup JS -->
    <script src="js/magnific-popup.js"></script>
    <!-- Fancybox JS -->
    <script src="js/facnybox.min.js"></script>
    <!-- Waypoints JS -->
    <script src="js/waypoints.min.js"></script>
    <!-- Countdown JS -->
    <script src="js/finalcountdown.min.js"></script>
    <!-- Nice Select JS -->
    <script src="js/nicesellect.js"></script>
    <!-- Ytplayer JS -->
    <script src="js/ytplayer.min.js"></script>
    <!-- Flex Slider JS -->
    <script src="js/flex-slider.js"></script>
    <!-- ScrollUp JS -->
    <script src="js/scrollup.js"></script>
    <!-- Onepage Nav JS -->
    <script src="js/onepage-nav.min.js"></script>
    <!-- Easing JS -->
    <script src="js/easing.js"></script>
    <!-- Active JS -->
    <script src="js/active.js"></script>
{% endblock %}